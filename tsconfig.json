{
    "compilerOptions": {
        "target": "es2015",
        "strict": true,
        "outDir": "target",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": [ "es2015" ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "pretty": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "rootDir": "src",
        "experimentalDecorators": true
    },
    "include": [
        "src/*",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}